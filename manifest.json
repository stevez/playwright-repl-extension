{
  "manifest_version": 3,
  "name": "Playwright REPL",
  "version": "0.8.0",
  "description": "A REPL panel inside Chrome DevTools for Playwright-style browser automation commands.",
  "devtools_page": "devtools.html",
  "permissions": [
    "debugger"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
